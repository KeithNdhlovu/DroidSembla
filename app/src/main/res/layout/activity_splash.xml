<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00d2fffe">

    <com.limitlessvirtual.droidsembla.customs.CircleImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/kc"/>


    <Button
        android:id="@+id/startDroidBtn"

        android:layout_width="fill_parent"

        android:layout_height="40dp"


        android:background="#ff126dff"

        android:text="Begin"

        android:textSize="20dp"/>

    <Button
        android:id="@+id/skipSync"

        android:layout_width="fill_parent"

        android:layout_marginTop="10dp"
        android:layout_height="40dp"


        android:background="#ff126dff"

        android:text="Skip Sync"

        android:textSize="20dp"/>

</LinearLayout>