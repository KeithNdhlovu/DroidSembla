<?xml version="1.0" encoding="utf-8"?>

 <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"

        android:layout_height="match_parent"

        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"

            android:layout_height="150dp"

            android:orientation="horizontal"

            android:padding="20dp"

            android:background="@drawable/profile_background">

            <ImageView

                android:id="@+id/user_avatar"

                android:layout_width="100dp"

                android:layout_height="wrap_content"

                android:src="@drawable/lived"/>

            <TextView

                android:id="@+id/name"

                android:layout_width="fill_parent"

                android:layout_height="wrap_content"

                android:layout_gravity="center"

                android:text="Hi, Jim Carrigan"

                android:textAppearance="?android:attr/textAppearanceMedium"

                android:textColor="#ff052c66"

                android:textSize="30dp"/>

            <View
                android:background="#ff126dff"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </LinearLayout>

        <View
            android:background="#ff126dff"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="5dp">
            <TextView

                android:id="@+id/number_of_project"

                android:layout_width="fill_parent"

                android:layout_height="wrap_content"

                android:text="12 Projects"/>

            <TextView

                android:id="@+id/number_of_tickets"

                android:layout_width="fill_parent"

                android:layout_height="wrap_content"

                android:text="20 Tickets"/>

            <TextView

                android:id="@+id/completed_tickets"

                android:layout_width="fill_parent"

                android:layout_height="wrap_content"

                android:text="15 Tickets Complete"/>
            </LinearLayout>
        
        <View
            android:background="#ff126dff"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

        <TextView

            android:id="@+id/email"

            android:layout_width="fill_parent"

            android:layout_height="wrap_content"

            android:gravity="right"

            android:text="keith@limitlessvirtual.com"

            android:textColor="#dd107add"

            android:textSize="15dp"

            android:textStyle="bold"/>

        <TextView

            android:id="@+id/userId"

            android:layout_width="fill_parent"

            android:layout_height="wrap_content"

            android:gravity="right"

            android:text="189B98N98N"

            android:textStyle="bold"/>

        <Button
            android:id="@+id/viewProjectsBtn"

            android:layout_width="fill_parent"

            android:layout_height="40dp"

            android:layout_gravity="center_horizontal"

            android:layout_marginBottom="10dp"

            android:layout_marginTop="30dp"

            android:background="#ff126dff"

            android:text="Projects"

            android:textSize="20dp"/>

        <Button
            android:id="@+id/viewUsers"

            android:layout_width="fill_parent"

            android:layout_height="40dp"

            android:layout_gravity="center_horizontal"

            android:layout_marginBottom="10dp"

            android:background="#ff126dff"

            android:text="Participants"

            android:textSize="20dp"/>

    </LinearLayout>
</ScrollView>
